[core]
	excludesfile = ~/.gitignore
	whitespace = -trailing-space
	autocrlf = input
	pager = delta
[interactive]
	diffFilter = delta --color-only
[color]
	ui = auto
[merge]
	stat = true
	conflictstyle = diff3
[delta]
	navigate = true  # use n and N to move between diff sections
	light = true
[diff]
	colorMoved = default
[pull]
	rebase = false
[push]
	default = upstream
[rebase]
	autoSquash = true
	autoStash = true
[alias]
	# display branches sorted by last commit
	brt = "!git for-each-ref refs/heads --color=always --sort -committerdate --format='%(HEAD)%(color:reset);%(color:yellow)%(refname:short)%(color:reset);%(contents:subject);%(color:green)(%(committerdate:relative))%(color:blue);<%(authorname)>' | column -t -s ';'"
	ci = commit
	cia = commit --amend --no-edit
	co = checkout
	d = diff
	ds = diff --staged
	fixup = "!f() { REV=$(git rev-parse $1); git commit --fixup=$REV && git rebase -i $REV^; }; f"
	l = log --oneline --decorate --graph
	s = status -sb
	snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
	stage = add
	start = !git init && git commit --allow-empty -m \"Initial commit\"
	unstage = reset HEAD

[credential]
	helper = osxkeychain
[web]
	browser = open

[url "git://github.com/"]
	insteadOf = gh:

[include]
	# For username / creds / etc
	path = ~/.gitconfig.local
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = Cristi BurcÄƒ
	email = mail@scribu.net
