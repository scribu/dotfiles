[core]
	excludesfile = ~/.gitignore
	whitespace = -trailing-space
	autocrlf = input
[color]
	ui = auto
[merge]
	stat = true
	conflictstyle = diff3
[diff]
	noprefix = true
	algorithm = patience
	compactionHeuristic = true
	# external = difft
[pull]
	rebase = false
[push]
	default = upstream
[rebase]
	autoSquash = true
	autoStash = true
[alias]
	# display branches sorted by last commit
	brt = "!git for-each-ref refs/heads --color=always --sort -committerdate --format='%(HEAD)%(color:reset);%(color:yellow)%(refname:short)%(color:reset);%(contents:subject);%(color:green)(%(committerdate:relative))%(color:blue);<%(authorname)>' | column -t -s ';'"
	ci = commit
	cia = commit --amend --no-edit
	co = checkout
	d = diff
	ds = diff --staged
	fixup = "!f() { REV=$(git rev-parse $1); git commit --fixup=$REV && git rebase -i $REV^; }; f"
	l = log --oneline --decorate --graph
	s = status -sb
	snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
	stage = add
	start = !git init && git commit --allow-empty -m \"Initial commit\"
	unstage = reset HEAD

[credential]
	helper = osxkeychain
[web]
	browser = open

[url "git://github.com/"]
	insteadOf = gh:

[include]
	# For username / creds / etc
	path = ~/.gitconfig.local
